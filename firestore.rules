
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Match any document in the 'wallets' subcollection for a specific user
    match /users/{userId}/wallets/{walletId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Match any document in the 'tags' subcollection for a specific user
    match /users/{userId}/tags/{tagId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Match any document in the 'transactions' subcollection for a specific user
    match /users/{userId}/transactions/{transactionId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
